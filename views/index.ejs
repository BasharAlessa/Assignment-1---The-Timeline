<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>

</head>
<body>
    <%- include("./shared/header") %>
    <% if (posts.length>0){ %>
        <% posts.forEach(post=>{ %>
    <div class="card">
        <h2><%=post.title %></h2>
        <h6><%= post.desc %></h6>
    </div>
        <% }) %>
    <%} else {%> 
        <p>No Posts For Today</p>

    <% } %>
</body>
</html>

