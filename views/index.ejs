<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>

</head>
<body>
    <%- include("./shared/header") %>
    <% if (posts.length>0){ %>
        <% posts.forEach(post=>{ %>
    <div class="card">

        <br/><br>

        <h2><%=post.title %>        <a href="/edit-post/<%=post._id%>">🖊️</a>
            <a href="/delete-post/<%=post._id%>">🗑️</a></h2>


        <h6><%= post.desc %></h6>


        <div>
            <% if (post.comments.length>0) { %>
                <% post.comments.forEach(comment=> { %>
                    <div class="card comment">
                        <!-- <p>/delete-comment/ <%=comment._id%></p> -->

                          
                        <h5><%=comment.comment%>   <a href="/delete-comment/<%=comment._id%>">🗑️</a></h5>

                    </div>
            <% }) %>

            <% } %>
        </div>
        <div>
            <form method="POST" action="/add-comment/<%= post._id%>">
                <input name="comment" placeholder="Comment">
                <button class="btn btn-outline-dark"> Add Comment</button>
            </form>
        </div>
    </div>
        <% }) %>
    <%} else {%> 
        <h3>There Is No Saved Posts</h3>
    <% } %>
</body>
</html>

